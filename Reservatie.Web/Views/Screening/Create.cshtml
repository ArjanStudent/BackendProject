@model Reservatie.Core.Models.Screening

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Screening</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Programmation" class="control-label"></label>
                <input asp-for="Programmation" class="form-control" />
                <span asp-validation-for="Programmation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Movie name</label>
                <select asp-for="Movie_Id" class="form-control" asp-items="ViewBag.Movie_Id">
                    @foreach (var Name in ViewBag.listMovies)
                    {
                        <option>@Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Hall name</label>
                <select asp-for="Hall_Id" class ="form-control" asp-items="ViewBag.Hall_Id">
                    @foreach (var title in ViewBag.listHalls)
                    {
                        <option>@title</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
